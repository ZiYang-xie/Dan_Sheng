<!--miniprogram/pages/releaseGoods/releaseGoods.wxml-->
<i-panel>
	<view class="textarea-wrp">
      <textarea class="textarea" placeholder="请输入发布物品信息" auto-focus="true" />
  </view>
	<i-button i-class="CataBtn" long="true" inline="true" bind:click="toggleLeft1" type="ghost">物品分类</i-button>
	<i-drawer mode="left" visible="{{showLeftCata}}" bind:close="toggleLeft1">
			<view class="demo-container">
					<i-radio-group current="{{current}}" bindchange="handleCataChange">
						<i-radio i-class="cataRadio" wx:for="{{goodType}}" position="{{position}}" wx:key="{{item.id}}" value="{{item.name}}" color="#FE9A2F">
						</i-radio>
					</i-radio-group>
			</view>
	</i-drawer>
</i-panel>


