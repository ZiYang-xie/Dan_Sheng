/* miniprogram/pages/secondHand/goodDetail/goodDetail.wxss */
.goodContainer{
  background-color: white;
  display: block;
  height: auto;
  width: 100%;
}

.goodImg{
  display: block;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 150rpx;
  width: 350rpx;
  max-width: 150px;
  height: 350rpx;
  max-height: 150px;
  box-shadow: 0px 0px 10px rgb(0,0,0,0.2);
}

.goodPrice{
  display: block;
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  color: #eb2f06;
  width: auto!important;
  padding: 0 8px 0 8px;
}

.goodTitle{
  font-weight: bold!important;
}

.goodInfo{
  border: 1px solid black;
  border-radius: 20rpx;
  margin-left: 10px;
  margin-right: 10px;
  box-shadow: 0px 0px 10px rgb(0,0,0,0.1);
}

.goodIntro{
  margin: 20rpx 20rpx 30rpx 20rpx;
  font-size: 16px;
}

.goodDetail{
  margin: 0 20rpx 20rpx 20rpx;
  font-size: 14px;
  color: gray;
}

.answerContainer{
  background-color: white;
  display: block;
  height: auto;
  width: 100%;
  margin: 0;
  padding: 0;
}

.aPublisherImg{
  width: 50px;
  height: 50px;
  border-radius: 25px;
  border: 1px solid black;
  margin: 0px 15px 5px 15px;
  margin-top: -15px;
  vertical-align: middle;
}

.aPublisher{
  display: inline-block;
  margin-top: -15px;
  font-weight: bold;
  line-height: 50px;
  height: 100%;
  padding-inline-start: 20px;
}

.aContent{
  background-color: rgb(150,150,150,0.1);
  line-height: 30px;
  height: 30px;
  border-radius: 5px;
  padding: 5px;
  padding-left: 10px;
  margin: 0 20px 0px 20px;
}

.textArea{
  padding: 15px;
  border-radius: 5px;
  line-height: 20px;
  height: 50px;
  width: 640rpx;
  background-color: rgb(250,250,250);
  border: 1px solid rgb(0,0,0,0.5);
  margin: 10px;
}

.btn{
  font-size: 16px!important;
  line-height: 27px!important;
  width: 400rpx!important;
}
