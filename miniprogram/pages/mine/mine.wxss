/* miniprogram/pages/mine/mine.wxss */
.userBlock{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  border: 0 solid #e9eaec;
  border-bottom-width: 1px;
}

.userImgContainer{
  position: relative;
  width: 200rpx;
  max-width: 150px;
  height: 200rpx;
  max-height: 150px;
  border-radius: 50%;
}

.userImgCover{
  position: absolute;
  width: 200rpx;
  max-width: 150px;
  height: 200rpx;
  max-height: 150px;
  border-radius: 50%;
  z-index: 100;
}

.userImg{
  position: absolute;
  width: 200rpx;
  max-width: 150px;
  height: 200rpx;
  max-height: 150px;
  border-radius: 50%;
}

.userName{
  text-align: center;
  border:black;
  font-size: 18px;
  font-weight: bold;
  margin-top: 20rpx;
}
