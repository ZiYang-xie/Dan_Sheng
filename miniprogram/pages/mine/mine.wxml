<i-cell-group>
	<i-cell class="userBlock">
		<view class="userImgContainer">
			<image class="userImgCover" src="../../style/icon/userImg/userImg-cover.png" bindtap="changeUserImg"></image>
			<image class="userImg" src="{{userImgsrc}}"></image>
		</view>
    <view class="userName">
		  <!-- <p>{{userName}}</p> -->
			<p wx:if="{{isLogin === true}}">{{userName}}</p>
			<p wx:if="{{isLogin === false}}" bindtap="gotoLogin">点击登录</p>
		</view>
		
	</i-cell>
	<i-cell title="个人信息" is-link="true" url="./detail/detail">
		<i-icon slot="icon" type="businesscard" size="28" color="#1B9CFC" />
	</i-cell>
	<i-cell title="我的标签" is-link="true" url="./tag/tag">
		<i-icon slot="icon" type="label" size="28" color="#EA2027" />
	</i-cell>
	<i-cell title="我的关注" is-link="true" url="./subscription/subscription">
		<i-icon slot="icon" type="browse" size="28" color="#ffa502" />
	</i-cell>
	<i-cell title="我的发布" is-link="true" url="./issue/issue">
		<i-icon slot="icon" type="createtask" size="28" color="#B33771" />
	</i-cell>
  <i-cell title="信誉值" is-link="true" url="./credit/credit">
		<i-icon slot="icon" type="integral" size="28" color="#3742fa" />
	</i-cell>
	<i-cell title="开关">
		<switch slot="footer" checked />
	</i-cell>
</i-cell-group>

